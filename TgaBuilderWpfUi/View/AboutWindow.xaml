<ui:FluentWindow  
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Class="TgaBuilderWpfUi.View.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TgaBuilderWpfUi.View" 
    xmlns:viewmodel="clr-namespace:TgaBuilderLib.ViewModel;assembly=TgaBuilderLib" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:views="clr-namespace:TgaBuilderLib.ViewModel.Views;assembly=TgaBuilderLib"
    mc:Ignorable="d"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    Title="About"
    ResizeMode="NoResize"
    SizeToContent="Height"
    SnapsToDevicePixels="True"
    WindowStyle="ToolWindow"
    Height="400"
    MinHeight="400"
    Width="300"
    MinWidth="300"
    d:Background="Black"
    d:DataContext="{d:DesignInstance Type=views:AboutViewModel}"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <ui:TitleBar
            Title="About"
            Grid.Row="0">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Resources/TgaBuilder_picture.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        <StackPanel
            Orientation="Vertical"
            Grid.Row="1"
            Margin="10,0"
            >

            <StackPanel
                Orientation="Horizontal"
                >
                <Image
                    Source="pack://application:,,,/Resources/TgaBuilder_picture.png"
                    Width="64"
                    Height="64"
                    Margin="5,5,10,5"
                    />
                <StackPanel>
                    <TextBlock
                        Text="{Binding Title}"
                        FontSize="18"
                        TextWrapping="Wrap"
                        FontWeight="Bold"
                />
                    <TextBlock
                        Text="{Binding Subtitle}"
                        FontSize="16"
                        TextWrapping="Wrap"
                />
                    <TextBlock
                        Text="{Binding DotNetInfo}"
                        FontSize="12"
                        TextWrapping="Wrap"
                        Margin="0,5,0,0"
                />
                </StackPanel>
            </StackPanel>
            
            <TextBlock
                Text="{Binding AboutText}"
                FontSize="14"
                TextWrapping="Wrap"
                Margin="0,5"
                />

            <DockPanel>
                <TextBlock 
                    FontSize="10" 
                    Margin="5"
                    DockPanel.Dock="Left"
                    >
                    <Hyperlink NavigateUri="https://github.com/JohnnyJF10/TgaBuilder/tree/master" 
                               RequestNavigate="Hyperlink_RequestNavigate">
                        GitHub
                    </Hyperlink>
                </TextBlock>
                <TextBlock 
                    FontSize="10" 
                    Margin="5"
                    HorizontalAlignment="Right"
                    >
                    <Hyperlink NavigateUri="https://github.com/JohnnyJF10/TgaBuilder/blob/master/LICENSE.txt" 
                               RequestNavigate="Hyperlink_RequestNavigate">
                        License: MIT
                    </Hyperlink>
                </TextBlock>
            </DockPanel>
        </StackPanel>
        <ui:Card
            Grid.Row="2"
            VerticalAlignment="Stretch"
            Margin="-10,0,-10,-10"
            IsHitTestVisible="False"
            />
        <ui:Button
            Grid.Row="2"
            Content="Close"
            Command="{Binding CloseCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            HorizontalAlignment="Right"
            Margin="0,0,15,0"
            Width="75"
            Height="30"
            />
    </Grid>
</ui:FluentWindow>
