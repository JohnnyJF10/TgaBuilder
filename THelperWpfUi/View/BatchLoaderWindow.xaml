<ui:FluentWindow  
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Class="THelperWpfUi.View.BatchLoaderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:THelperWpfUi.View" 
    xmlns:viewmodel="clr-namespace:THelperLib.ViewModel;assembly=THelperLib" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    xmlns:wpfzoompanel="clr-namespace:WPFZoomPanel;assembly=WPF.ZoomPanel" 
    xmlns:elements="clr-namespace:THelperWpfUi.Elements"
    mc:Ignorable="d"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    Title="MainWindow"
    Height="420"
    MinHeight="420"
    Width="600"
    MinWidth="560"
    d:Background="Black"
    d:DataContext="{d:DesignInstance Type=viewmodel:BatchLoaderViewModel, IsDesignTimeCreatable=False}"
    >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ModifiedUiNumberBoxStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <sys:Boolean x:Key="True">True</sys:Boolean>
            <sys:Boolean x:Key="False">False</sys:Boolean>
            <Style TargetType="{x:Type elements:ContextMenuButton}"
                    BasedOn="{StaticResource {x:Type ui:Button}}"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid
        Margin="2.5"
        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ui:TitleBar
            Title="Batch File Loader"
            Grid.ColumnSpan="2">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Resources/thelper_picture.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        <StackPanel
            Orientation="Horizontal"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            >
            <ui:Button 
                Content="Select Folder..."
                Margin="10"
                HorizontalAlignment="Stretch"
                Command="{Binding SelectTRRFolderCommand}"
                CommandParameter="{StaticResource False}"/>
            <elements:ContextMenuButton
                Margin="10" 
                ItemsSource="{Binding RecentBatchLoaderFolders}"
                ItemCommand="{Binding OpenRecentFolderCommand}">
                <TextBlock>
                    <Run Text=" Open Recent Folders" />
                    <Run FontFamily="Wingdings 3" Text="&#x82;" />
                </TextBlock>
            </elements:ContextMenuButton>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="2"
            >
            <Label
                Content="First Texture Index:"
                Margin="10"
                HorizontalAlignment="Left"/>
            <ui:NumberBox 
                Margin="10"
                Style="{StaticResource ModifiedUiNumberBoxStyle}"
                Value="{Binding StartTexIndex, UpdateSourceTrigger=PropertyChanged}"
                />
            <Label
                Content="Number of Textures:"
                Margin="10"
                HorizontalAlignment="Left"/>
            <ui:NumberBox 
                Margin="10"
                Style="{StaticResource ModifiedUiNumberBoxStyle}"
                Value="{Binding NumTextures, UpdateSourceTrigger=PropertyChanged}"
                />
            <Label
                Content="Texture Size:"
                Margin="10"
                HorizontalAlignment="Left"/>
            <ui:NumberBox 
                Margin="10"
                Style="{StaticResource ModifiedUiNumberBoxStyle}"
                Value="{Binding TextureSize, UpdateSourceTrigger=PropertyChanged}"
                />
        </StackPanel>
        <ui:Card
            VerticalAlignment="Stretch"
            Grid.Row="2"
            Grid.Column="1"    
            Grid.RowSpan="2"
            IsHitTestVisible="False"
            Margin="0,0,-10,-10"
            />
        <wpfzoompanel:ZoomPanel
            Grid.Row="2"
            Grid.Column="1"
            BorderBrush="Transparent"
            Background="Transparent"
            Margin="5"
            ZoomAndPanInitialPosition="FitScreen"
            >
            <Image
                Source="{Binding Presenter}"
                Stretch="Uniform"
                Margin="10"
        />
        </wpfzoompanel:ZoomPanel>
        <Border
            Grid.Row="4"
            Grid.Column="1"
            Padding="12"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            BorderThickness="0,1,0,0"
            BorderBrush="Transparent"
            CornerRadius="0">
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom">
                <ui:Button 
                    Content="Import"
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    Command="{Binding ImportCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                <ui:Button 
                    Content="Cancel"
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    Command="{Binding CancelCommand}"          
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

            </StackPanel>
        </Border>
        <ui:SnackbarPresenter 
            x:Name="MessageSnackbarPresenter"
            d:Visibility="Hidden"
            Grid.ColumnSpan="2"
            Grid.RowSpan="4"
            />
    </Grid>
</ui:FluentWindow>
